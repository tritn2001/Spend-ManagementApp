<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GioiThieu_Activity"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/black"
            android:titleTextColor="@color/white"
            android:scrollbarSize="15dp"
            android:paddingLeft="20dp"
            android:layout_weight="1"
            android:title="Giới thiệu"/>
        <ImageView
            android:id="@+id/Image_thoat_gioithieu"
            android:background="@color/black"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/thoat"
            />
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"

            >
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="35dp"
                android:text="0"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="điểm"
                android:gravity="center"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="Giới thiệu bạn bè của bạn và trao giải cho các tính năng cao cấp của chúng tôi."
        android:textColor="@color/black"/>
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cả bạn và bạn bè của bạn đều có thể kiếm được điểm. Thu thập tất cả các điểm và mở khóa các tính năng cao cấp của Money Manager"
    />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/boxshadow3"
            android:orientation="horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:text="Code :"
            android:textColor="#95A5A6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:text=" 31FF2CA298"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:background="@drawable/boxshadow3"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="6dp"
            android:background="@color/white"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Thêm thông tin"
                android:textColor="@color/black"
                android:background="@color/white"

                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_margin="10dp"
            android:layout_height="50dp"
            app:cardCornerRadius="6dp"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="#FFB300"
                android:text="Gửi mã cho người đưa tin"
                android:textColor="@color/black"

                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginTop="30dp"
    >
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đổi điểm"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"

            >

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:layout_height="150dp"
                android:background="@color/white"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                   android:background="@color/white"
                    android:layout_weight="1"

                    >
                    <androidx.cardview.widget.CardView
                       android:layout_marginTop="10dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="24dp"
                        app:cardBackgroundColor="@color/white"
                        >

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/tv1"
                            android:background="@color/white"
                            />
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Máy Tính"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/black"
                        />
                    <androidx.cardview.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        app:cardCornerRadius="6dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="@color/white"
                        >

                        <ImageView
                            android:layout_width="9dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:background="@color/white"
                            android:src="@drawable/tv2" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="1 điểm"
                            android:textSize="8dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:background="@color/white"
                            />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/boxshadow3"
                android:layout_height="150dp"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/boxshadow3"

                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/boxshadow3"
                        app:cardCornerRadius="24dp"

                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:background="@drawable/boxshadow3"
                            android:src="@drawable/tv3" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="30dp"
                        android:text="Số tài khoản Không giới hạn"
                        android:textColor="@color/black"
                        android:background="@drawable/boxshadow3"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:textSize="6dp"
                        android:text="[15 -> Vô hạn]"
                        android:textColor="@color/black" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="65dp"
                        android:layout_height="17dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="6dp">

                        <ImageView
                            android:layout_width="9dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:background="@color/white"
                            android:src="@drawable/tv2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:background="@color/white"
                            android:text="1 điểm"
                            android:textColor="@color/black"
                            android:textSize="8dp"

                            />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>