<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ThuFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        >
        <Button
            android:id="@+id/btnToDay_T"
            android:layout_width="50dp"
            android:layout_height="150dp"
            android:text="Hôm nay"
            android:background="@drawable/boxshadow"
            android:textColor="@color/white"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/btnMonth_T"
            android:layout_width="50dp"
            android:layout_height="150dp"
            android:text="Tháng này"
            android:background="@drawable/boxshadow"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/btnYear_T"
            android:layout_width="50dp"
            android:layout_height="150dp"
            android:text="Năm nay"
            android:background="@drawable/boxshadow"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            />
    </LinearLayout>
    <ListView
        android:id="@+id/lv_Khoan_Thu"
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        />
    </ListView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_Khoan_Thu_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="#03A9F4"
        android:src="@drawable/ic"
        android:layout_gravity="bottom|center"
        />

</FrameLayout>