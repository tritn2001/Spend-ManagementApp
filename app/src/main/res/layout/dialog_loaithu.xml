<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/custom_thongke"
    android:padding="10dp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Loại Thu"
        android:textSize="26dp"
        android:background="#129CD3"
        android:textStyle="bold"
        android:textColor="@color/white"
        />
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:id="@+id/edIdLoaiThu"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:hint="Mã Loại Thu"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@color/black"
        />
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edNameLoaiThu"
        android:hint="Tên Loại Thu"
        android:layout_marginTop="20dp"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lưu"
            android:layout_margin="20dp"
            android:id="@+id/btnSaveLT"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:id="@+id/btnCancelLT"

            android:text="Hủy"/>

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/tb_t"
        android:layout_marginTop="50dp"
        android:scaleType="fitXY"/>
    </LinearLayout>