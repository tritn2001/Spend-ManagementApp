<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_thongke"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#129CD3"
        android:gravity="center"
        android:text="Khoản Chi"
        android:textSize="26dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edIdKhoanChi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="111dp"
        android:hint="Mã khoản Chi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        android:textColorHint="@android:color/darker_gray"
        android:paddingLeft="15dp"
        >

    </com.google.android.material.textfield.TextInputEditText>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edTienKhoanChi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_marginRight="20dp"
        android:inputType="numberSigned"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="61dp"
        android:hint="Số Tiền Chi"
        app:layout_constraintBottom_toTopOf="@+id/btnSaveKhoanChi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edNameKhoanChi"
        android:textColor="@color/black"
        android:textColorHint="@android:color/darker_gray"
        android:paddingLeft="15dp"

        >

    </com.google.android.material.textfield.TextInputEditText>



    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edNameKhoanChi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Tên Khoản Chi"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edIdKhoanChi"
        android:textColor="@color/black"
        android:textColorHint="@android:color/darker_gray"
        android:paddingLeft="15dp"
        >

    </com.google.android.material.textfield.TextInputEditText>

    <TextView
        android:id="@+id/tvngayKhoanChi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="2021-09-11"
        android:textColor="@color/black"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edNameKhoanChi" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="20dp"
        android:text="Loại Chi"
        app:layout_constraintBottom_toTopOf="@+id/edIdKhoanChi"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spnerKhoanChi"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/boxshadow3"
        android:backgroundTint="@color/yellow"
        android:backgroundTintMode="src_over"
        android:paddingLeft="10dp"
        android:popupBackground="@color/yellow"
        android:spinnerMode="dialog"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/edIdKhoanChi"
        app:layout_constraintStart_toEndOf="@+id/textView"
       />

    <Button
        android:id="@+id/btnSaveKhoanChi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="55dp"
        android:layout_marginStart="30dp"
        android:text="Lưu"
        android:textColor="@color/white"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnCancelKhoanChi"
        app:layout_constraintEnd_toStartOf="@+id/btnCancelKhoanChi"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnCancelKhoanChi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="50dp"
        android:text="Hủy"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvngayKhoanChi" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/tb_c"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btnSaveKhoanChi"
        tools:layout_editor_absoluteX="10dp"
        android:scaleType="fitXY"
        />

</androidx.constraintlayout.widget.ConstraintLayout>