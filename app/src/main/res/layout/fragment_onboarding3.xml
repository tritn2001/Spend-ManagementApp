<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.OnboardingFragment1"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white"
    >

   <ImageView
       android:layout_width="200dp"
       android:layout_height="200dp"
       android:src="@drawable/tb_t"
       android:layout_marginTop="60dp"
       android:layout_gravity="center"
       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hưởng thụ cuộc sống"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thoải mái,tự do tài chính với người thân , bạn bè."
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        />
    <Button
        android:id="@+id/btnGetStart"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_input2"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:text="Get Start"
        android:textStyle="bold"
        android:layout_gravity="center"
        />
</LinearLayout>