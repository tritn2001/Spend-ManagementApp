<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.ThongKeTheoChiFragment"
    android:background="@color/white"
    >

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/thongke"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:layout_marginTop="50dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btnTuNgay"
            android:text="Từ Ngày"
            android:background="@drawable/custom_input"
            android:backgroundTint="@color/white"
            android:textSize="13sp"

            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:hint="YYYY/MM/DD"
            android:id="@+id/edTuNgay"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:textColorHint="@color/black"
            android:background="@drawable/boxshadow3"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:layout_marginRight="20dp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btnDenNgay"
            android:text="Đến Ngày"
            android:background="@drawable/custom_input"
            android:textSize="13sp"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:hint="YYYY/MM/DD"
            android:id="@+id/edDenNgay"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:textColorHint="@color/black"
            android:background="@drawable/boxshadow3"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:layout_marginRight="20dp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btnThongKeChi"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_input"
        android:text="Thống Kê"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/tvThongKeChi"
        android:textSize="25dp"
        android:text=" 0 VND "
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:background="@drawable/boxshadow3"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/cardview_dark_background"
        />


</LinearLayout>