<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0E5E5E5E"
    tools:context=".fragment.SoChiTieuFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_so_chi_tieu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/boxshadow3"
        app:tabTextColor="@color/black"
        />

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/soChiTieu_viewPager"
        android:layout_below="@id/tab_layout_so_chi_tieu" />



</RelativeLayout>