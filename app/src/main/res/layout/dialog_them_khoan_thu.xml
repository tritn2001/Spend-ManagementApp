<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_thongke"
    android:padding="10dp">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#129CD3"
        android:gravity="center"
        android:text="Khoản Thu"
        android:textColor="@color/white"
        android:textSize="26dp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edMa_KhoanThu_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="131dp"
        android:hint="Mã khoản Thu"
        android:paddingLeft="15dp"
        android:textColor="@color/black"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.google.android.material.textfield.TextInputEditText>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/ed_giaTien_KhoanThu_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="61dp"
        android:hint="Số Tiền Thu"
        android:inputType="numberSigned"
        android:paddingLeft="15dp"
        android:textColor="@color/black"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/btnSave_KhoanThu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edTen_Khoan_Thu_1"

        >

    </com.google.android.material.textfield.TextInputEditText>


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edTen_Khoan_Thu_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Tên Khoản Thu"
        android:paddingLeft="15dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edMa_KhoanThu_1">

    </com.google.android.material.textfield.TextInputEditText>

    <TextView
        android:id="@+id/tvNgay_Thu_Khoan_Thu_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="2021-09-11"
        android:textColor="@color/black"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edTen_Khoan_Thu_1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="20dp"
        android:text="Loại Thu"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/edMa_KhoanThu_1"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spner_Khoan_Thu_1"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/boxshadow3"
        android:textColor="@color/black"
        android:backgroundTint="@color/yellow"
        app:layout_constraintBottom_toTopOf="@+id/edMa_KhoanThu_1"
        app:layout_constraintStart_toEndOf="@+id/textView"
        android:spinnerMode="dialog"

        />

    <Button
        android:id="@+id/btnSave_KhoanThu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="55dp"
        android:text="Lưu"
        android:textColor="@color/white"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnCancel_KhoanThu"
        app:layout_constraintEnd_toStartOf="@+id/btnCancel_KhoanThu"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnCancel_KhoanThu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="50dp"
        android:text="Hủy"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNgay_Thu_Khoan_Thu_1" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/tb_t"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btnSave_KhoanThu"
        tools:layout_editor_absoluteX="10dp"
        android:scaleType="fitXY"
        />

</androidx.constraintlayout.widget.ConstraintLayout>